<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.*?>

<AnchorPane id="AnchorPane" fx:id="fieldsAnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banking.controllers.FieldController">
    <stylesheets>
        <URL value="@/com/banking/css/fields.css" />
    </stylesheets>
    <children>
        <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <VBox>
                                    <children>
                                        <JFXListView fx:id="list1" styleClass="custom-jfx-list-view"
                                                     layoutY="50">
                                            <JFXListView fx:id="subList" styleClass="sublist">
                                                <groupnode>
                                                    <Label styleClass="sub-label">Process Action</Label>
                                                </groupnode>
                                                <Label>Action 1</Label>
                                                <Label>Action 2</Label>
                                            </JFXListView>
                                             <JFXListView fx:id="subListfield" styleClass="sublist">
                                                <groupnode>
                                                    <Label styleClass="sub-label">Field Action</Label>
                                                </groupnode>
                                                <Label>Add</Label>
                                                <Label>Edit</Label>
                                                <Label>Delete</Label>
                                                <Label>Add Enum</Label>
                                            </JFXListView>
                                             <JFXListView fx:id="subListExcel" styleClass="sublist">
                                                <groupnode>
                                                    <Label styleClass="sub-label">Excel Action</Label>
                                                </groupnode>
                                                <Label>Create</Label>
                                                <Label>Open</Label>
                                                <Label>Export</Label>
                                            </JFXListView>
                                        </JFXListView>
                                        <StackPane prefHeight="60.0" prefWidth="200.0">
                                            <children>
                                                <Label fx:id="statusLabel" />
                                            </children>
                                        </StackPane>
                                        <GridPane fx:id="formGrid" prefHeight="125.0" prefWidth="200.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                        </GridPane>
                                    </children>
                                </VBox>
                                <AnchorPane maxWidth="-Infinity" prefHeight="200.0" prefWidth="80.0" />
                                <TableView fx:id="fieldsTable" prefHeight="200.0" prefWidth="350.0">
                                    <columns>
                                        <TableColumn fx:id="fieldNameCol" prefWidth="75.0" text="FieldName" />
                                        <TableColumn fx:id="fieldTypeCol" prefWidth="75.0" text="FieldType" />
                                        <TableColumn fx:id="combinationsCol" prefWidth="75.0" text="Combinations" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </HBox>
                    </children>
                </StackPane>
            </center>
            <top>
                <StackPane prefHeight="80.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="titleLable" text="Label" />
                    </children>
                </StackPane>
            </top>
            <bottom>
                <StackPane prefHeight="80.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
                    </children>
                </StackPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
